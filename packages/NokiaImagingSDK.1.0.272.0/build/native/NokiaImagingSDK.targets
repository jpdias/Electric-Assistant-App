<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CheckAnyCPU" Condition="('$(Platform)' != 'x64' AND '$(Platform)' != 'x86' AND '$(Platform)' != 'ARM')" BeforeTargets="BeforeBuild">
		<Error Text="Nokia Imaging SDK does not support the $(Platform) target platform. Please consult http://developer.nokia.com/Resources/Library/Lumia/#!nokia-imaging-sdk/adding-libraries-to-the-project.html;#toc_InstallingtheSDKandincludingthelibrariestoaprojectusingNuGet " />
	</Target>

	<Target Name="Checkx64" Condition="('$(Platform)' == 'x64')" BeforeTargets="BeforeBuild">
		<Error Text="Nokia Imaging SDK does not support the $(Platform) target platform. Please consult http://developer.nokia.com/Resources/Library/Lumia/#!nokia-imaging-sdk/adding-libraries-to-the-project.html;#toc_InstallingtheSDKandincludingthelibrariestoaprojectusingNuGet " />
	</Target>

	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='Win32|v110_wp80'" Label="x86 and WinPRT 8.0">
		<MappedPlatform>x86</MappedPlatform>
		<MappedPlatformToolset>wp8</MappedPlatformToolset>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='ARM|v110_wp80'" Label="ARM and WinPRT 8.0">
		<MappedPlatform>ARM</MappedPlatform>
		<MappedPlatformToolset>wp8</MappedPlatformToolset>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='ARM|v110'" Label="ARM and WinRT 8.0">
		<MappedPlatform>ARM</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='Win32|v110'" Label="x86 and WinRT 8.0">
		<MappedPlatform>x86</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup>
	<!--PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='x64|v110'" Label="x64 and WinRT 8.0">
		<MappedPlatform>x64</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup-->

	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='ARM|v120'" Label="ARM and WinRT 8.1">
		<MappedPlatform>ARM</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='Win32|v120'" Label="x86 and WinRT 8.1">
		<MappedPlatform>x86</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup>
 	<!--PropertyGroup Condition="'$(Platform)|$(PlatformToolset)'=='x64|v120'" Label="x64 and WinRT 8.1">
		<MappedPlatform>x64</MappedPlatform>
		<MappedPlatformToolset>windows8</MappedPlatformToolset>
	</PropertyGroup-->

	<ItemGroup>
	    <Reference Include="Nokia.Graphics.Imaging">
	      <HintPath>$(MSBuildThisFileDirectory)\..\..\lib\$(MappedPlatformToolset)\$(MappedPlatform)\Nokia.Graphics.Imaging.winmd</HintPath>
	      <IsWinMDFile>true</IsWinMDFile>
	    </Reference>
	    <Reference Include="Nokia.InteropServices.WindowsRuntime">
	      <HintPath>$(MSBuildThisFileDirectory)\..\..\lib\$(MappedPlatformToolset)\$(MappedPlatform)\Nokia.InteropServices.WindowsRuntime.winmd</HintPath>
	      <IsWinMDFile>true</IsWinMDFile>
	    </Reference>
	</ItemGroup>
</Project>
